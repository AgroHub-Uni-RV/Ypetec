# Configurações do ambiente - copie para .env e ajuste os valores

# Django
DEBUG=True
SECRET_KEY=django-insecure-gere-uma-chave-segura-para-producao

# Database (PostgreSQL)
# Formato: postgres://usuario:senha@host:porta/nome_banco
DATABASE_URL=postgres://postgres:senha@localhost:5432/ypetec

# JWT - use a mesma chave do sistema Node.js para compatibilidade
JWT_SECRET_KEY=mesma-chave-do-sistema-atual

# Hosts permitidos (separados por vírgula)
ALLOWED_HOSTS=localhost,127.0.0.1

# CORS - origens permitidas (separados por vírgula)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Email (Resend para reset de senha)
RESEND_API_KEY=sua-chave-resend

# Produção
SECURE_SSL_REDIRECT=False
